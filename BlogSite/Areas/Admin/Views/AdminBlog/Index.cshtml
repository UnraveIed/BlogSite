@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="product-imitation">
                                <img src="@item.Image" height="225px" width="240"/>
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
                                </span>
                                <small class="text-muted">@item.Category.Name</small>
                                <a href="#" class="product-name"> @item.Title</a>
                                <div class="small m-t-xs">
                                    @if (@item.Content.Length > 100)
                                {
                                    <p class="card-text mb-3">@item.Content.Substring(0,item.Content.Substring(0,100).LastIndexOf(" "))... </p>
                                }
                                else
                                {
                                    <p class="card-text mb-3">@item.Content </p>
                                }
                                </div>
                                <div class="m-t text-righ">

                                    <a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</body>
</html>
