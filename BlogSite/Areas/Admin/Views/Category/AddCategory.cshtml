@using EntityLayer.Concrete
@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AddCategory</h1>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adi")
    @Html.TextBoxFor(x=> x.Name, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br />
    @Html.Label("Kategori Aciklamasi")
    @Html.TextAreaFor(x=> x.Description, 15, 3, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Description)
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
}