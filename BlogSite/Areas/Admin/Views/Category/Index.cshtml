@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kategori Adi</th>
    <th>Pasif Yap</th>
    <th>Aktif Yap</th>
    <th>Duzenle</th>
</tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.CategoryId</td>
        <td>@item.Name</td>
        <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" id="deleteBtn" onclick="return confirm('Silmek istediginize emin misiniz?')" class="btn btn-danger">Pasif Yap</a></td>
        <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
        <td><a href="#" class="btn btn-success">Duzenle</a></td>
    </tr>
}
</table>
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
