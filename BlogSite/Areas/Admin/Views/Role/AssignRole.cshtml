@using BlogSite.Areas.Admin.Models
@model List<RoleAssign_VM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>AssignRole</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists"/>
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
        
    }
    <br/>
    <button type="submit" class="btn btn-info">Degisiklikleri Kaydet</button>
</form>
<br/>
<a href="/Admin/Role/UserRoleList" class="btn btn-primary">Kullanici Listesine Don</a>
