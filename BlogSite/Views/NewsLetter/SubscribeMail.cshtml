<div class="tech-btm">
    <h4>Mail Bultenine Abone Ol</h4>
    <p>Yazilim dunyasindan haberdar ol</p>
    <form method="post">
        <input type="email" placeholder="Email" required="" id="txtmail">
        <input type="submit" id="btnAdd" value="Subscribe">
    </form>

</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $("#btnAdd").click(function() {
        let values = {
            Mail: $("#txtmail").val(),
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function(func) {
                let result = jQuery.parseJSON(func);
                alert("Basarili");
            }
        });
    });
</script>




