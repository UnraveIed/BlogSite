@model BlogSite.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>WriterAdd</h1>

<form class="form-group" method="post" enctype="multipart/form-data">
<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri</h4>
                <p class="card-description"> Basic form elements </p>
                <div class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=> x.WriterId, new {@class = "form-control"})
                        <label for="exampleInputName1">Name</label>
                        @Html.TextBoxFor(x=> x.Name, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x=> x.Mail, new {@class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.TextBoxFor(x=>x.Password, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Yazar Gorsel</label>
                        <input type="file" name="Image" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkinda</label>
                        @Html.TextAreaFor(x=> x.About, 10,3, new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">Iptal</button>
                </div>
            </div>
        </div>
    </div>    
</form>